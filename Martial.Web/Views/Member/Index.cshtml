@model IEnumerable<Member>

<h1>Index</h1>

@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    // permission to check if user is admin
    // if so then show create button
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dob)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Belt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsuranceDue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsurancePaid)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Belt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsuranceDue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsurancePaid)
                    </td>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        // permission for admin to only view edit, details and delete

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
